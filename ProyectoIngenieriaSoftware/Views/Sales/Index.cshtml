@model Venta

@using (Html.BeginForm("Create", "Sales", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.FechaVenta)
        @Html.TextBoxFor(model => model.FechaVenta, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.FechaVenta)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdCliente)
        @Html.DropDownListFor(model => model.IdCliente, ViewBag.Clientes as SelectList, "-- Seleccionar Cliente --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IdCliente)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdProducto)
        @Html.DropDownListFor(model => model.IdProducto, ViewBag.Productos as SelectList, "-- Seleccionar Producto --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IdProducto)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cantidad)
        @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Cantidad)
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Venta" class="btn btn-primary" />
    </div>
}

